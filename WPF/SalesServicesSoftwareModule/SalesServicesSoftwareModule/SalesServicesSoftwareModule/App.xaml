<Application x:Class="SalesServicesSoftwareModule.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SalesServicesSoftwareModule"
             StartupUri="Views\LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="BackgroundLight">#138198</SolidColorBrush>
            <SolidColorBrush x:Key="BackgroundDark">#275D75</SolidColorBrush>
            <SolidColorBrush x:Key="TextColor">
                <SolidColorBrush.Color>
                    <Color R="240" G="240" B="240" A="255"/>
                </SolidColorBrush.Color>
            </SolidColorBrush>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Resources\Styles\ButtonStyle.xaml"/>
                <ResourceDictionary Source="\Resources\Styles\TabControlStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
